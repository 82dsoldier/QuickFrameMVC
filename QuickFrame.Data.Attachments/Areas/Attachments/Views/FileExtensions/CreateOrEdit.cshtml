@model FileExtensionDto
@{
	ViewBag.Title = "File Extension";
	Layout = "_PopupLayout";
}
<form qf-form>
    <div asp-validation-summary="All" class="text-danger"></div>
	<div class="container">
		<div class="col-md-6">
			<label asp-for="Name"></label>
			<div>
				<input asp-for="Name" class="form-control" />
			</div>
		</div>
		<div class="col-md-12">
			<label asp-for="Description"></label>
			<div>
				<textarea asp-for="Description"></textarea>
			</div>
		</div>
		<div class="col-md-6">
			<label asp-for="Extension"></label>
			<div>
				<input asp-for="Extension" />
			</div>
		</div>
		@Html.Partial("FormButtons");
	</div>
</form>

@section scripts {
	<script>
		$(document).ready(function () {
			$('#Extension').keypress(function (e) {
				if (e.which == 46) {
					e.preventDefault();
				}
			});
		});
	</script>
}