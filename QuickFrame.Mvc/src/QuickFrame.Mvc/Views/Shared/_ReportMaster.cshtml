<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	@{
			if(!String.IsNullOrEmpty(ViewBag.Title)) {
			<title>@ViewBag.AppName - @ViewBag.Title</title>
			} else {
			<title>@ViewBag.AppName</title>
			}
	}
	<style>
		@RenderSection("css", false)
	</style>
</head>
<body>
	@RenderBody()
</body>
</html>