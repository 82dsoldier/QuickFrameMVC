@model QuickFrame.Mvc.Models.ExplorerModel

	<ul>
		@{ 
			if(Model.BasePaths != null && Model.BasePaths.Any()) {
				foreach(var path in Model.BasePaths) {
					@await Component.InvokeAsync(nameof(QuickFrame.Mvc.ViewComponents.ExplorerNodeComponent), new { model = new QuickFrame.Mvc.Models.ExplorerNode(path) });
				}
			}
		}
	</ul>
