<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	@{ 
		if(!String.IsNullOrEmpty(ViewBag.Title)) {
		    <title>@ViewBag.AppName - @ViewBag.Title</title>
		} else {
		    <title>@ViewBag.AppName</title>
		}
	}
    <environment names="Development">
        <link rel="stylesheet" href="~/css/site-bundle.css" />
        <link rel="stylesheet" href="~/css/Site.css" />
    </environment>
    <environment names="Production">
        <link rel="stylesheet" href="~/css/site-bundle.min.css" />
        <link rel="stylesheet" href="~/css/Site.min.css" />
    </environment>
	<environment names="Staging">
        <link rel="stylesheet" href="~/css/site-bundle.staging.css" />
        <link rel="stylesheet" href="~/css/Site.css" />
	</environment></head>

</head>
<body>
    @RenderBody()
    <environment names="Development">
        <script src="~/js/jquery-bundle.js"></script>
    </environment>
    <environment names="Production">
        <script src="~/js/jquery-bundle.min.js"></script>
    </environment>
	<environment names="Staging">
        <script src="~/js/jquery-bundle.js"></script>
    </environment>
    @RenderSection("scripts", false)
</body>
</html>