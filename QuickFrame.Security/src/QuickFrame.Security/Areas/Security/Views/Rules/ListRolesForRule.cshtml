@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuickFrame.Security.Areas.Security.Models.RoleRuleIndexModel

@{
	Layout = "_PopupLayout";
}
<h3>Roles for Rule</h3>
<a asp-controller="Rules" asp-action="AddRoleToRule" asp-area="Security" asp-route-id="@Model.RoleId" close-click close-button class="btn btn-sm btn-default fancybox" refresh="true" data-width="1024px" data-height="768px"><i class="fa fa-plus"></i>Add Role</a>

@{
	if(Model.RoleList.Any()) {
		<table class="table table-striped table-bordered table-hover index" style="border: 0;">
			<thead>
				<tr>
					<th style="width:3%;"></th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach(var obj in Model.RoleList) {
						<tr>
							<td style="text-align:center;padding:0;">
								<div class="dropdown">
									<a href="#" class="dropdown-toggle" style="display:inline-block;width:100%;" data-toggle="dropdown">&nbsp;<i class="fa fa-lg fa-ellipsis-v"></i>&nbsp;</a>
									<ul class="dropdown-menu">
										<li><a asp-controller="Rules" asp-action="RemoveRoleFromRule" asp-route-ruleId="@Model.RoleId" asp-route-roleId="@obj.Id" asp-route-area="Security" class="remove-object"><i class="fa-fw fa fa-times" style="color:red" ></i>Delete</a></li>
									</ul>
								</div>
							</td>
							<td style="padding:0;">@obj.Name</td>
						</tr>
					}
				}
			</tbody>
		</table>
					}
}