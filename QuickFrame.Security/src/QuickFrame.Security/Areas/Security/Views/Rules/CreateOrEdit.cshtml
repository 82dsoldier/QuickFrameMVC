@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuickFrame.Security.AccountControl.Dtos.SiteRuleEditDto

@{
	Layout = "_PopupLayout";
	var action = Model.Id == 0 ? "Create" : "Edit";
}
<h3>@action Rule</h3>
<form asp-controller="Rules" asp-action="@action" asp-area="Security">
	<input type="hidden" asp-for="Id" />
	<div class="row">
		<div class="col-md-3">
			<label asp-for="Priority"></label>
			<div>
				<input asp-for="Priority" />
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<label asp-for="Url"></label>
			<div>
				<input asp-for="Url" />
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<input asp-for="IsAllow" /><label asp-for="IsAllow"></label>
		</div>
		<div class="col-md-3">
			<input asp-for="MatchPartial" /><label asp-for="MatchPartial"></label>
		</div>
	</div>
	<div class="row">
		@Html.Partial("FormButtons");
	</div>
</form>
