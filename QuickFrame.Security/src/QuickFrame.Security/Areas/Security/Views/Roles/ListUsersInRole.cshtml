@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuickFrame.Security.Areas.Security.Models.UserRoleIndexModel

@{
	Layout = "_PopupLayout";
}
<h3>User list for Role @Model.RoleName</h3>
<a asp-controller="Roles" asp-action="AddUserToRole" asp-area="Security" asp-route-roleId="@Model.RoleId"class="btn btn-sm btn-default fancybox" refresh><i class="fa fa-plus"></i> Add User to Role</a>

@{
	if(Model.UserList.Any()) {
		<table class="table index table-striped table-bordered table-hover" style="border: 0;">
			<thead>
				<tr>
					<th style="width:3%;"></th>
					<th style="width:25%">Name</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach(var obj in Model.UserList) {
						<tr>
							<td style="text-align:center;">
								<div class="dropdown">
									<a href="#" class="dropdown-toggle" style="display:inline-block;width:100%;" data-toggle="dropdown"><i class="fa fa-lg fa-ellipsis-v"></i></a>
									<ul class="dropdown-menu">
										<li><a asp-controller="Roles" asp-action="RemoveUserFromRole" asp-route-id="@obj.UserId" asp-route-roleId="@obj.RoleId" asp-route-area="Security" class="remove-object"><i class="fa-fw fa fa-times" style="color:red"></i>Delete</a></li>
									</ul>
								</div>
							</td>
							<td>@obj.UserName</td>
							<td>@obj.Email</td>
						</tr>
					}
				}
			</tbody>
		</table>
						}
					}
