@model FileHeaderPatternDto
@{ 
	ViewBag.Title = "File Extension";
	Layout = "_PopupLayout";
}
<form qf-form>
    <div asp-validation-summary="All" class="text-danger"></div>
	<div class="container">
		<div class="col-md-6">
			<label asp-for="Name"></label>
			<div>
				<input asp-for="Name" class="form-control" />
			</div>
		</div>
		<div class="col-md-12">
			<label asp-for="Description"></label>
			<div>
				<textarea asp-for="Description" class="form-control"></textarea>
			</div>
		</div>
		<div class="col-md-12">
			<label>File Header Description</label>
			<div class="col-md-6">
				<label asp-for="Offset"></label>
				<div>
					<input asp-for="Offset" />
				</div>
				<div>
					<div>
						<input asp-for="LocationBeginning" class="location-marker" /><label style="margin-left:15px;">From Beginning</label>
					</div>
					<div>
						<input asp-for="LocationEnd" class="location-marker" /><label style="margin-left:15px;">From End</label>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<label asp-for="FileHeader"></label>
				<div>
					<textarea asp-for="FileHeader"></textarea>
				</div>
			</div>
		</div>
		@Html.Partial("FormButtons");
	</div>
</form>

@section scripts {
	<script>
		$(document).ready(function() {
			$('#LocationBeginning').click(function() {
				$('#LocationEnd').prop('checked', !$('#LocationBeginning').prop('checked'));
			
			});
			$('#LocationEnd').click(function () {
				$('#LocationBeginning').prop('checked', !$('#LocationEnd').prop('checked'));

			})
		})
	</script>
}